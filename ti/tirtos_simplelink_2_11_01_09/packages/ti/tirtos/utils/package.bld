/*
 *  ======== package.bld ========
 */

var commonBld = xdc.loadCapsule("ti/tirtos/build/common.bld");

var objList = [
    "UARTMon.c",
];

var trgFilter_M3 = {
    field: "isa",
    list: [
        "v7M",
    ],
};

var trgFilter_M4F = {
    field: "name",
    list: [
        "M4F"
    ],
};

var trgFilter_M4 = {
    field: "name",
    list: [
        "M4"
    ],
};

var trgFilter_A8Fnv = {
    field: "name",
    list: [
        "A8Fnv"
    ],
};

var trgFilter_28 = {
    field: "isa",
    list: [
        "28",
        "28FP",
    ],
};
var trgFilter_430X = {
    field: "suffix",
    list: [
        "e430X",
    ],
};
var trgFilter_430XS = {
    field: "suffix",
    list: [
        "r430XS",
    ],
};

/* generate libraries */
if ((MWareDir != "") || (CC26xxWareDir != "")){
    /* Library include paths are defined in config.bld */
    var coptsIncludePath = "";

    if (MWareDir != "") {
        coptsIncludePath += " -I" + MWareDir + " -DMWARE ";
    }

    if (CC26xxWareDir != "") {
        coptsIncludePath += " -I" + CC26xxWareDir + " -DCC26XXWARE ";
    }

    /* generate makefiles */
    commonBld.buildLibs(objList, undefined, undefined, trgFilter_M3, arguments, {copts: coptsIncludePath});
}

if (CCWareDir != "") {
    /* Library include paths are defined in config.bld */
    var coptsCCWareM4IncludePath = " -I" + CCWareDir + " -DCCWARE ";
    /* generate makefiles */
    commonBld.buildLibs(objList, undefined, undefined, trgFilter_M4, arguments, {copts: coptsCCWareM4IncludePath});
}

if (TivaWareDir != "") {
    /* Library include paths are defined in config.bld */
    var coptsTivaWareM4IncludePath = " -I" + TivaWareDir + " -DTIVAWARE ";
    /* generate makefiles */
    commonBld.buildLibs(objList, undefined, undefined, trgFilter_M4F, arguments, {copts: coptsTivaWareM4IncludePath});
}

if ((MSP430WareDir != "")) {
    var paths = commonBld.getCompilerLinkerOptions("MSP430F5529", MSP430WareDir);
    /* Library include paths are defined in config.bld */
    var coptsMSP430HeaderIncludePath = paths.copts + " -DMSP430WARE -D__MSP430F5529__ ";
    var iarcoptsMSP430HeaderIncludePath = paths.copts + " -DMSP430WARE -D__MSP430F5529__ ";

    /* generate makefiles */
    commonBld.buildLibs(objList, undefined, undefined, trgFilter_430X, arguments, {copts: coptsMSP430HeaderIncludePath});
    commonBld.buildLibs(objList, undefined, undefined, trgFilter_430XS, arguments, {copts: iarcoptsMSP430HeaderIncludePath});
}

Pkg.otherFiles = [
    "package.bld",
    "UARTMon.xml",
];

/* include source files in the release package */
Pkg.attrs.exportSrc = true;
Pkg.attrs.exportCfg = true;
